@model FinancialPortal.Models.ChangePasswordViewModel
@{
                /**/

                ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

<div class="panel panel-sign">
    <div class="panel-body">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="mb-xlg">Change Password</h4>
            <fieldset class="mb-xl">

                <div class="form-group">
                    <label class="col-md-3 control-label" for="profileNewPassword">Old Password</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="profileNewPasswordRepeat">New Password</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="profileNewPasswordRepeat">Confirm New Password</label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

            </fieldset>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-9 col-md-offset-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
        }
    </div>
 </div>
